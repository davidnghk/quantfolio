<p id="notice"><%= notice %></p>

<h1>Listing Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Capital</th>
      <th>Cash</th>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.code %></td>
        <td><%= portfolio.name %></td>
        <td><%= portfolio.capital %></td>
        <td><%= portfolio.cash %></td>
        <td><%= portfolio.start_date %></td>
        <td><%= portfolio.end_date %></td>
        <td><%= portfolio.user %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

