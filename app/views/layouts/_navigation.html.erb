<div class="navbar navbar-default navbar-static-top">
  <div class="container">
  	<%= link_to 'QuantFolio', root_path, class: "navbar-brand" %>
  	<% if current_user %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav col-mdp6">
          	<li><%= link_to "Stocks Chart", stock_chart_path  %></li>
            <li><%= link_to "Portfolios", portfolios_path %></li>
            <li><%= link_to "My Portfolios", my_funds_path %></li>
            <li><%= link_to "My Profile", edit_registration_path(current_user) %></li>
            <li><%= link_to "Stocks", vehicles_path  %></li>
          </ul>
          <ul class="nav navbar-right col-md-4">
          	<li class="col-md-8 user-name text-right">
          		<i class="fa fa-user"></i>
          	<%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
          	</li>
			<li class="col-md-4 logout">
			<%= link_to("Logout", destroy_user_session_path, class: 'btn btn-xs btn-danger', method: :delete) %>
			</li>
          </ul>
        </div>
    <% else %>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav col-mdp6">
          	<li><%= link_to "Stocks Chart", stock_chart_path  %></li>
          </ul>
          <ul class="nav navbar-right col-md-4">
			<li class="col-md-8 text-right">
          		<%= link_to "Login", user_password_path %>
          	</li>
          	<li>
          		<%= link_to "Sign Up", new_user_registration_path %>
          	</li>
          </ul>
        </div>
    <% end %>
  </div>
</div>